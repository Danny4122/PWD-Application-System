# Prevent execution of scripts inside uploads
<FilesMatch "\.(php|phtml|phar|pl|py|cgi)$">
  Require all denied
</FilesMatch>

# Disable PHP engine in this folder (best-effort)
php_flag engine off

# Prevent directory listing
Options -Indexes

# Block dot files like .env
<FilesMatch "^\.">
  Require all denied
</FilesMatch>
